<h1>Create a new visit for <%= @location.name %>!</h1>
<ul>
<% @visit.errors.messages.each do |key, error| %>
	<li><%= key %>
		<ul>
		<% error.each do |message| %>
			<li><%= message %></li>
		<% end %> 
		</ul>
	</li>
<% end %>
</ul>

<%= form_for [@location, @visit] do |f| %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.datetime_select(:from_date, default: Time.now + 1.day) %>
	<br/>
	<%= f.datetime_select(:to_date, default: Time.now + 1.day) %>
	<br/>
	<%= f.submit "Save" %>
	<%= f.button "Cancel", :name => 'cancel' %>
<% end %>