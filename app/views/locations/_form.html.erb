<% if @location.errors.any? %>
    <ul>
        <%= @location.errors.size %>
        <% @location.errors.full_messages.each do |error_message| %>
            <li><%= error_message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for [@location] do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br />
    <%= f.label :city %>
    <%= f.text_field :city %>
    <br />
    <%= f.label :street %>
    <%= f.text_field :street %>
    <br />
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
    <br />
    <%= f.label :country %>
    <%= f.text_field :country %>
    <br />
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br />
    <%= f.submit "Save" %>
    <%= f.button "Cancel", :name => "cancel" %>
<% end %>
 